{
  "manifest_version": 3,
  "name": "Multi Clipboard",
  "description": "산업체 핸즈온 프로젝트",
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "contextMenus"
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "commands": {
    "clipboard1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "clipboard1",
      "global": true
    },
    "clipboard2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "clipboard2",
      "global": true
    },
    "clipboard3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "clipboard3",
      "global": true
    },
    "clipboard4": {
      "suggested_key": {
        "default": "Ctrl+Shift+4"
      },
      "description": "clipboard4",
      "global": true
    }
  }
}